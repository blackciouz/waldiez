#https://editorconfig.org/#file-format-details
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,.gitmodules}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{*.yml,*.yaml,*.css}]
indent_size = 2

# Ignore:
[{*.svg,*.waldiez,*.waldiezTool,*.waldiezModel,*.waldiezAgent}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
